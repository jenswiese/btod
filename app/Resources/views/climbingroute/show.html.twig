{% extends 'base.html.twig' %}

{% block body %}
    <h1>ClimbingRoute</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ climbingRoute.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ climbingRoute.name }}</td>
            </tr>
