{% extends 'base.html.twig' %}

{% block body %}
    <h1>Spot</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ spot.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ spot.name }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('spot_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('spot_edit', { 'id': spot.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
